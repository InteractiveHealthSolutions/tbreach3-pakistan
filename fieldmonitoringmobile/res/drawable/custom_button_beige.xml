<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true">
         <shape android:shape="rectangle">
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#9AC0CD" />
             <gradient  android:angle="-90"  android:startColor="#B1C295" android:endColor="#F5FFF7" />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle">
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#9AC0CD" />
             <solid  android:color="#d3d8c2"/>       
         </shape>
     </item>  
    <item android:state_enabled="false">
         <shape android:shape="rectangle">
             <corners android:radius="1dip" />
             <stroke android:width="1dip" android:color="#9AC0CD" />
             <solid  android:color="#b7b9ac"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle">
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#9AC0CD" />
             <gradient  android:angle="-90" android:startColor="#F5FFF7" android:endColor="#B1C295" />            
         </shape>
     </item>
</selector>